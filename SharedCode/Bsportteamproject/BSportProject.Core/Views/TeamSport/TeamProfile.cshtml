@model BSportProject.Core.Models.UserViewModels
@using Microsoft.AspNet.Identity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Request.IsAuthenticated)
{
    <div id="wrapper">
        <div class="overlay"></div>
        <!-- Sidebar -->
        <nav class="navbar navbar-default navbar-fixed-top" id="sidebar-wrapper" role="navigation">
            <ul class="nav sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        BSPORT
                    </a>
                </li>
                <li>
                    <a href="#">Home</a>
                </li>
                <li>
                    <a href="#">Sport</a>
                </li>
                <li>
                    <a href="#">Stadiums</a>
                </li>
                <li>
                    <a href="#">About Us</a>
                </li>
                <li>
                    <a href="#">FAQ</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
            </ul>
        </nav>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
                <span class="hamb-top"></span>
                <span class="hamb-middle"></span>
                <span class="hamb-bottom"></span>
            </button>

            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.Partial("PartialViews/_Header", Model)
                        <!--main content start-->
                        <section id="main-content">
                            <section class="wrapper">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <ol class="breadcrumb">
                                            <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                                            <li><i class="icon_documents_alt"></i>Pages</li>
                                            <li><i class="fa fa-user-md"></i>Profile</li>
                                        </ol>
                                    </div>

                                </div>
                                <div class="row">
                                    <!-- profile-widget -->
                                    <div class="col-lg-12">
                                        <div class="profile-widget profile-widget-info">
                                            <div class="panel-body">
                                                <div class="col-lg-2 col-sm-2">
                                                    <h4>@User.Identity.Name</h4>
                                                    <div class="follow-ava">
                                                        @{ if (String.IsNullOrEmpty(Model.Account.ImageURL))
                                                            {
                                                                <img src="~/img/Avatar/Default/photo.jpg" alt="">
                                                            }
                                                            else
                                                            {
                                                                <img src="~/img/Avatar/@Model.Account.ImageURL" alt="">
                                                            }
                                                        }
                                                    </div>
                                                    <h6>Administrator</h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- page start-->
                                <div class="row">
                                    <div class="col-lg-12">
                                        <section class="panel">
                                            <header class="panel-heading tab-bg-info">
                                                <ul class="nav nav-tabs">
                                                    <li class="active">
                                                        <a data-toggle="tab" href="#recent-activity">
                                                            <i class="fa fa-home" aria-hidden="true"></i>
                                                            Daily Activity
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a data-toggle="tab" href="#team">
                                                            <i class="fa fa-users" aria-hidden="true"></i>
                                                            Team
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a data-toggle="tab" href="#booking">
                                                            <i class="fa fa-futbol-o" aria-hidden="true"></i>
                                                            Booking
                                                        </a>
                                                    </li>
                                                </ul>
                                            </header>

                                            <div class="panel-body">
                                                <div class="col-lg-12">
                                                    <div class="tab-content">
                                                        <div id="recent-activity" class="tab-pane active">
                                                            <div class="profile-activity">
                                                                @Html.Partial("PartialViews/_DailyActivities", Model)
                                                            </div>
                                                        </div>
                                                        <div id="team" class="tab-pane">
                                                            @Html.Partial("PartialViews/_ViewProfile", Model)
                                                        </div>
                                                        <div id="booking" class="tab-pane">
                                                            @Html.Partial("PartialViews/_teamProfile", Model)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </section>
                                    </div>
                                </div>

                                <!-- page end-->
                            </section>
                        </section>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
                                                            }