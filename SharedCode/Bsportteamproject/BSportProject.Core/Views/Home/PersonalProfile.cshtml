@model BSportProject.Core.Models.UserViewModels
@using Microsoft.AspNet.Identity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Request.IsAuthenticated)
{
    <div class="account-management">
        <div class="page-content edit-profile">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <!-- NAV TABS -->
                    <ul class="nav nav-tabs nav-tabs-custom-colored tabs-iconized">
                        <li class="active"><a href="#profile-tab" data-toggle="tab" aria-expanded="true"><i class="fa fa-user"></i> Profile</a></li>
                        <li class=""><a href="#settings-tab" data-toggle="tab" aria-expanded="false"><i class="fa fa-gear"></i> Settings</a></li>
                    </ul>
                    <!-- END NAV TABS -->
                    <div class="tab-content profile-page">
                        <div class="tab-pane profile active" id="profile-tab">
                            <div class="row">
                                @Html.Partial("PartialViews/_UserImage")
                                <div class="col-md-9">
                                    <div class="user-info-right">
                                        <div class="dealer-settings">
                                            <div class="settings">
                                                <div class="item-setting" id="e-profile">
                                                    @Html.Partial("PartialViews/_EditProfile")
                                                </div>
                                                <div class="item-setting" id="sport-profile">
                                                    @Html.Partial("PartialViews/_EditSport")
                                                </div>
                                            </div>
                                        </div>                                      
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane settings" id="settings-tab">
                            @Html.Partial("PartialViews/_ProfileSetting")
                        </div>
                        @Html.Partial("PartialViews/_Popup")
                    </div>
                </div>
            </div>
        </div>
    </div>
}

