@{
    Layout = "~/Views/Shared/_MasterAccount.cshtml";
}
<div class="container page-content ">
    <div class="row">
        <div class="col-md-6  col-sm-8 col-xs-12 col-md-offset-3">
            <div class="panel panel-primary" id="locked-screen">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Please enter your email address
                    </h3>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                        <div class="profile-pic text-center">
                            <img src="img/Friends/guy-3.jpg" alt="" class="img-circle img-responsive img-user">
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="email" class="form-control" id="email" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <a href="index.html" class="btn btn-info btn-block">
                                    <i class="fa fa-share"></i>
                                    Continue
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>