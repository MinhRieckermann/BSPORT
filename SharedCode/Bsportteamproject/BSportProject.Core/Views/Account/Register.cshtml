@model BSportProject.Core.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/_MasterAccount.cshtml";
}

<div class="parallax filter-black">
    <div class="parallax-image"></div>
    <div class="small-info">
        <div class="col-sm-10 col-sm-push-1 col-md-6 col-md-push-3 col-lg-6 col-lg-push-3">
            <img class="img-responsive" style="margin: 0 auto;" src="~/Content/themes/base/images/backgrounds/BSportTeam.png" />
            <div class="card-group animated flipInX">               
                <div class="card">
                    <div class="card-block">
                        <div class="center">
                            <h4 class="m-b-0"><span class="icon-text">Login</span></h4>
                            <p class="text-muted">Access your account</p>
                        </div>
                        <form action="index.html" method="post">
                            <div class="form-group form-email-login">
                                <input type="email" id="Email" class="form-control" placeholder="Email Address" required>
                                <div class="clearfix" id="EmailError"></div>
                            </div>
                            <div class="form-group form-password-login">
                                <input type="password" id="Password" class="form-control" placeholder="Password" required>
                                <div class="clearfix" id="PasswordError"></div>
                                <a href="#" class="pull-xs-right">
                                    <small>Forgot?</small>
                                </a>
                            </div>
                            <div class="center">
                                <a href="#" id="login" class="btn  btn-azure" data-url="@Url.Action("Login","Account")">
                                    Login
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card">
                    <div class="card-block center">
                        <h4 class="m-b-0">
                            <span class="icon-text">Sign Up</span>
                        </h4>
                        <p class="text-muted">Create a new account</p>
                        <form action="index.html" method="get">
                            <div class="form-group form-fullname-register">
                                <input type="text" id="Fullname" class="form-control" placeholder="Full Name">
                                <div class="clearfix" id="FullnameError"></div>
                            </div>
                            <div class="form-group form-email-register">
                                <input type="email" id="REmail" class="form-control" placeholder="Email">
                                <div class="clearfix" id="REmailError"></div>
                            </div>
                            <div class="form-group form-password-register">
                                <input type="password" id="RPassword" class="form-control" placeholder="Password">
                                <div class="clearfix" id="RPasswordError"></div>
                            </div>
                            <div class="form-group confirmPassword">
                                <input type="password" id="RConfirmpassword" class="form-control" placeholder="Confirm Password">
                                <div class="clearfix" id="ConfirmPasswordError1"></div>
                                <div class="clearfix" id="ConfirmPasswordError2"></div>
                            </div>
                            <div class="form-group gender">
                                <div class="btn-group btn-toggle" data-toggle="buttons">
                                    <label class="btn btn-primary active">
                                        <input type="radio" id="option-0" name="options" value="0" checked="checked">Male
                                    </label>
                                    <label class="btn btn-default">
                                        <input type="radio" id="option-1" name="options" value="1">Female
                                    </label>
                                </div>
                            </div>
                            <button type="button" id="register" class="btn btn-azure" data-url="@Url.Action("Register","Account")">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>









