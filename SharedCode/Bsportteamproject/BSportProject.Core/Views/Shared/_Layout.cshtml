@model BSportProject.Core.Models.UserViewModels
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/BSporteam-favicon64x64.png">
    <title>BSport</title>
    <!-- Bootstrap core CSS -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript" src="~/Scripts/moment.min.js"></script>
    <script type="text/javascript" src="~/Scripts/homescript.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!--
    <nav class="navbar navbar-fixed-top navbar-transparent" role="navigation">
        <div class="container">
            Brand and toggle get grouped for better mobile display
            <div class="navbar-header">
                <button id="menu-toggle" type="button" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar bar1"></span>
                    <span class="icon-bar bar2"></span>
                    <span class="icon-bar bar3"></span>
                </button>
            </div>
        </div>
    </nav>
    -->

    <nav class="navbar navbar-transparent" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand-logo" href="/Home/Index">
                    <img class="img logo" src="~/Content/themes/base/images/backgrounds/BSportTeam.png">
                </a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="javascript:void(0)" data-toggle="search">
                            <i class="pe-7s-search"></i>
                            <p>Search</p>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="pe-7s-mail">
                                <span class="label"> 13 </span>
                            </i>
                            <p>Mails<span class="caret"></span></p>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="pe-7s-bell">
                                <span class="label"> 23 </span>
                            </i>
                            <p>Notifications</p>
                        </a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (!string.IsNullOrEmpty(Model.User.ImageURL))
                                {
                                    <img class="img-circle img-sm-logo" src="@Model.User.ImageURL" alt="User Image">
                                }
                                else
                                {
                                    <img class="img-circle img-sm-logo" src="/img/Friends/guy-3.jpg" alt="User Image">
                                }
                            }
                            @*<i class="pe-7s-user"></i>*@
                            
                            <p>Account<span class="caret"></span></p>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#" id="logout" data-url="@Url.Action("LogOff","Account")">Log Out</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-right navbar-search-form" role="search">
                    <div class="form-group form-search">
                        <input type="text" value="" class="form-control form-control-search" placeholder="Search...">
                    </div>
                </form>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <!--  end navbar -->
    @RenderBody()
    <footer class="footer">
        <div class="container">
            <p class="text-muted"> Copyright &copy; Company - All rights reserved </p>
        </div>
    </footer>
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
</body>
</html>
